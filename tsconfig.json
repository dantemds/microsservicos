{
  "compilerOptions": {
    "target": "es2017",                                
    "module": "commonjs",                           
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "noEmitOnError": true,
    "strict": true,
    "removeComments": true,
    "allowJs": true,                        
    "forceConsistentCasingInFileNames": true,                                                 
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                              
  },
  "include": [
    "src/**/*.ts"
, "src/database/dataSource.ts"  ]
}
